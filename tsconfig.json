        "noImplicitAny": false,
        "removeComments": false,
        "outDir": "build",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "pretty": true
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "cli/**/*"
    ]
}